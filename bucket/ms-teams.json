{
    "version": "latest",
    "description": "Microsoft Teams (New App) with GPU fix",
    "homepage": "https://www.microsoft.com/microsoft-teams/download-app",
    "license": "Proprietary",
    "url": "https://go.microsoft.com/fwlink/?linkid=2196106",
    "hash": "sha256:auto",
    "post_install": [
        "Write-Host 'Installing Teams...' -ForegroundColor Green",
        "Start-Process -FilePath \`$dir\\teamsbootstrapper.exe -ArgumentList '-p' -Wait -NoNewWindow",
        "Write-Host 'Setting GPU fix...' -ForegroundColor Yellow",
        "[Environment]::SetEnvironmentVariable('WEBVIEW2_ADDITIONAL_BROWSER_ARGUMENTS', '--disable-gpu --disable-software-rasterizer', 'User')",
        "New-Item -Path 'HKCU:\\Software\\Microsoft\\Teams' -Force",
        "Set-ItemProperty -Path 'HKCU:\\Software\\Microsoft\\Teams' -Name 'DisableHardwareAcceleration' -Value 1 -Type DWord",
        "Write-Host 'Teams installed successfully!' -ForegroundColor Green"
    ]
}
